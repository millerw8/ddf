<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="droolsrules" class="ddf.catalog.metacard.inference.DroolsInference">
        <cm:managed-properties persistent-id="ddf.catalog.metacard.inference.DroolsInference"
                               update-strategy="container-managed"/>
        <property name="droolsRules">
                <value></value>
        </property>
    </bean>

    <service ref="droolsrules">
        <interfaces>
            <value>ddf.catalog.plugin.PreIngestPlugin</value>
        </interfaces>
    </service>

</blueprint>
